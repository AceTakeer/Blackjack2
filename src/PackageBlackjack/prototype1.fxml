            <Pane layoutX="288.0" layoutY="326.0" prefHeight="120.0" prefWidth="207.0">
               <children>
                  <Button fx:id="hitButton" layoutX="45.0" layoutY="40.0" mnemonicParsing="false" onAction="#hitButtonPressed" text="Hit" visible="false" />
