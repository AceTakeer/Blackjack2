    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="500.0" prefWidth="763.0" VBox.vgrow="ALWAYS">
         <children>
            <Pane fx:id="backgroundColorPane" prefHeight="575.0" prefWidth="800.0" style="-fx-background-color: green;">
               <children>
                  <Label fx:id="gameTitleText" layoutX="633.0" layoutY="497.0" text="Blackjack Remastered" textFill="WHITE" />
                  <Button fx:id="startButton" layoutX="666.0" layoutY="527.0" mnemonicParsing="false" onAction="#startButtonPressed" text="START" />
